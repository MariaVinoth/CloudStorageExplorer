                        <option>Audio</option>
                        <option>Video</option>
                        <option>Document</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="dateModified">Select File Type:</label>
                    <input type="date" name="dateModified" id="dateModified">
                </div>
            </form>

        </div>
    </div>
</div>

